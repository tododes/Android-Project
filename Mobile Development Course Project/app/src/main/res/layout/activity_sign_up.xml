<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gx60.semiproject.SignUpActivity"
    android:background="@mipmap/ic_launcher">

    <include layout="@layout/toolbar"
        android:id="@+id/mCustomToolbar"
        android:layout_width="500dp"
        android:layout_height="50dp" />

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/your_name"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="30dp"
        android:id="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/your_password"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/your_name"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/your_password"
        android:layout_alignStart="@+id/your_password" />

    <TextView
        android:text="Gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:id="@+id/Gender_Radio"
        android:layout_below="@+id/your_password"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <RadioGroup
        android:layout_height="60dp"
        android:layout_below="@+id/Gender_Radio"
        android:layout_alignLeft="@+id/Gender_Radio"
        android:layout_alignStart="@+id/Gender_Radio"
        android:layout_marginTop="19dp"
        android:layout_width="120dp"
        android:id="@+id/Gender_Group">

        <RadioButton
            android:text="Male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="rbclick"
            android:id="@+id/Gender_Male" />

        <RadioButton
            android:text="Female"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:onClick="rbclick"
            android:id="@+id/Gender_Female" />
    </RadioGroup>

    <CheckBox
        android:text="I'm not a robot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/not_robot"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <CheckBox
        android:text="I want to get notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/get_notif"
        android:layout_marginBottom="34dp"
        android:layout_alignBottom="@+id/not_robot"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="E-Mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:id="@+id/textView5"
        android:layout_above="@+id/not_robot"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignLeft="@+id/radioGroup"
        android:layout_alignStart="@+id/radioGroup" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/your_email"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/your_password"
        android:layout_alignStart="@+id/your_password" />

    <Button
        android:text="PROCEED"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/not_robot"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/sign_up" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="23dp"
        android:id="@+id/textView"
        android:layout_below="@+id/mCustomToolbar"
        android:layout_alignParentStart="true" />

</RelativeLayout>
