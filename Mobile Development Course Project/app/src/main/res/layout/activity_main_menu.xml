<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gx60.semiproject.MainMenu">

    <include layout="@layout/toolbar"
        android:id="@+id/mCustomToolbar"
        />

    <fragment
        android:layout_height="350dp"
        android:name="com.example.gx60.semiproject.MainMenuBottomFragment"
        android:id="@+id/mainmenu_bottom"
        tools:layout="@layout/mainmenu_bottom"
        android:layout_width="500dp"
        android:layout_marginTop="226dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
       />

    <fragment
        android:name="com.example.gx60.semiproject.MainMenuTopFragment"
        android:id="@+id/mainmenu_top"
        tools:layout="@layout/mainmenu_top"
        android:layout_width="250dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:layout_height="150dp"
        android:layout_below="@id/mCustomToolbar"/>
</RelativeLayout>
